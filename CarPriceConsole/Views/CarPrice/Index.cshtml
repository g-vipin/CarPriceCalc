@model CarPriceApi.Controllers.CarPriceRequest
@{
    ViewData["Title"] = "Car Price Calculator";
}

<h1>Car Price Calculator</h1>

@if (ViewBag.Error != null)
{
    <div style="color:red;">@ViewBag.Error</div>
}

@if (ViewBag.BasePrice != null)
{
    <div>
        <h2>Base Price: @ViewBag.BasePrice</h2>
    </div>
}

<form asp-action="Calculate" method="post">
    <div>
        <label for="carType">Car Type:</label>
        <select id="carType" asp-for="CarType" class="form-control" required>
            <option value="CompactSuv">Compact SUV</option>
            <option value="Suv">SUV</option>
        </select>
    </div>
    <div>
        <label for="price">Ex-Showroom Price:</label>
        <input type="number" id="price" asp-for="ExShowroomPrice" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Calculate</button>
</form>
